{
  "name": "ts-app-cli",
  "version": "1.1.1",
  "description": "CLI for creating applications based on typescript",
  "main": "dist/index.js",
  "bin": {
    "ts-app-cli": "./dist/index.js"
  },
  "keywords": [
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrianhdezm/ts-app-cli.git"
  },
  "bugs": {
    "url": "https://github.com/adrianhdezm/ts-app-cli/issues"
  },
  "homepage": "https://github.com/adrianhdezm/ts-app-cli#readme",
  "engines": {
    "node": ">=12"
  },
  "author": "Adrian Hernandez-Mendez",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist",
    "format": "prettier --write \"./src/**/*.{js,ts,json}\" README.md ts*.json",
    "lint": "npm run format && eslint . --ext .ts",
    "build": "npm run clean && npm run lint && tsc",
    "start": "npm run build && nodemon dist/index.js & tsc --watch --incremental",
    "test": "jest"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "commander": "^4.0.1",
    "figlet": "^1.2.4",
    "fs-extra": "^8.1.0",
    "ora": "^4.0.3",
    "os": "^0.1.1",
    "validate-npm-package-name": "^3.0.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.2.0",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.7",
    "@types/validate-npm-package-name": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.2"
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ]
}
