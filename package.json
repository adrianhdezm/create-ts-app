{
  "name": "ts-app-cli",
  "version": "1.5.2",
  "description": "CLI for creating applications based on Typescript",
  "main": "dist/index.js",
  "bin": {
    "ts-app-cli": "./dist/index.js"
  },
  "keywords": [
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrianhdezm/ts-app-cli.git"
  },
  "bugs": {
    "url": "https://github.com/adrianhdezm/ts-app-cli/issues"
  },
  "homepage": "https://github.com/adrianhdezm/ts-app-cli#readme",
  "engines": {
    "node": ">=12"
  },
  "author": "Adrian Hernandez-Mendez",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist",
    "format": "prettier --write \"./src/**/*.{ts,tsx}\" README.md ts*.json",
    "lint": "npm run format && eslint . --ext .ts --ext .tsx",
    "build": "npm run clean && npm run lint && tsc",
    "start": "npm run build && nodemon dist/index.js & tsc --watch --incremental",
    "test": "jest"
  },
  "dependencies": {
    "@xstate/react": "^0.8.1",
    "ajv": "^6.12.0",
    "cfonts": "^2.10.0",
    "chalk": "^4.1.2",
    "fs-extra": "^8.1.0",
    "ink": "^3.2.0",
    "ink-divider": "^3.0.0",
    "ink-spinner": "^4.0.3",
    "minimist": "^1.2.5",
    "react": "^17.0.2",
    "validate-npm-package-name": "^3.0.0",
    "xstate": "^4.9.1"
  },
  "devDependencies": {
    "@types/figlet": "^1.2.0",
    "@types/fs-extra": "^8.0.1",
    "@types/ink-divider": "^2.0.2",
    "@types/ink-spinner": "^3.0.1",
    "@types/jest": "^27.4.1",
    "@types/minimist": "^1.2.0",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40",
    "@types/validate-npm-package-name": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "cross-env": "^6.0.3",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ]
}
